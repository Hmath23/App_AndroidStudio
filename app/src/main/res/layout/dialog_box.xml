<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trasparent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/pale_blue"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="215dp"
        >
        <TextView
            android:id="@+id/logo"
            android:text="@string/header_logo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:scaleType="center"
            android:textColor="@color/aquamarine"
            android:background="@color/myrtle_green"
            android:contentDescription="@string/app_name"
            android:textSize="40sp"
            android:shadowColor="@color/hookers_green"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="20"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtDialogTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/txtDialogMensagem"
            android:layout_below="@id/txtDialogTitulo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/botao_nao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogMensagem"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/botao_arredondado"
            android:text="NÃƒO"
            android:textColor="@color/pale_blue"
            android:textSize="20sp" />
        <Button
            android:id="@+id/botao_sim"
            android:text="SIM"
            android:textSize="20sp"
            android:textColor="@color/pale_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDialogMensagem"
            android:layout_toEndOf="@id/botao_nao"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:layout_marginStart="40dp"
            android:background="@drawable/botao_arredondado" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>