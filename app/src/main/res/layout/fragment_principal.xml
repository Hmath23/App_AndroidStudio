<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pale_blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.principal.PrincipalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="0"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:text="InÃ­cio"
                android:textSize="50sp"
                android:shadowColor="@color/myrtle_green"
                android:shadowDx="7"
                android:shadowDy="7"
                android:shadowRadius="20"
                android:textStyle="bold"
                android:textColor="@color/hookers_green"/>
            <Button
                android:id="@+id/btnReceitas"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_menu_receitas"
                android:layout_below="@+id/textViewPrincipal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/textViewPrReceitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnReceitas"
                android:layout_toRightOf="@id/btnReceitas"
                android:layout_below="@id/textViewPrincipal"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="Receitas"
                android:textColor="@color/hookers_green"
                android:textSize="17dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
            <Button
                android:id="@+id/btnPetar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_menu_petar"
                android:layout_below="@+id/btnReceitas"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/textViewPrPetar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnPetar"
                android:layout_toRightOf="@id/btnPetar"
                android:layout_below="@id/textViewPrReceitas"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/hookers_green"
                android:textSize="17dp"
                android:text="Petar"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
